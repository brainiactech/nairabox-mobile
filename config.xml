<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns = "http://www.w3.org/ns/widgets"
	xmlns:gap = "http://phonegap.com/ns/1.0"
	id = "com.nairabox.app"
	versionCode = "1773"
	version = "9.5">

	<name>nairabox</name>

	<description>nairabox is the faster and safer way to send money, save and monitor your spending.</description>

	<!-- <preference name="phonegap-version" value="cli-6.4.0" /> -->
	<preference name="prerendered-icon" value="true" />
	<preference name="orientation" value="portrait" />
	<preference name="exit-on-suspend" value="false" />
	<preference name="detect-data-types" value="false" />
	<preference name="webviewbounce" value="false" />
	<preference name="target-device" value="universal" />
	<preference name="SplashScreenDelay" value="0" />
	<preference name="ShowSplashScreenSpinner" value="false" />
	<preference name="AutoHideSplashScreen" value="false" />
	<preference name="AndroidLaunchMode" value="singleTask" />
	<preference name="FadeSplashScreen" value="false" />
	<preference name="SplashMaintainAspectRatio" value="true" />
	<preference name="KeyboardDisplayRequiresUserAction" value="false" />
	<preference name="FullScreen" value="false" />
	<preference name="android-windowSoftInputMode" value="adjustPan" />
	<preference name="StatusBarBackgroundColor" value="transparent" />
	<preference name="deployment-target" value="8.0" />
	<preference name="android-build-tool" value="gradle" />
	<preference name="android-minSdkVersion" value="14" />
	<preference name="android-targetSdkVersion" value="23" />
	<preference name="DisallowOverscroll" value="true" />
	<preference name="YouTubeDataApiKey" value="AIzaSyDVJGZX8-laLBH0j8_0-Yzlwma2IeL9Q9k" />

	<plugin name="cordova-plugin-device" />
	<plugin name="cordova-plugin-dialogs" />
	<plugin name="cordova-plugin-splashscreen" />
	<plugin name="cordova-plugin-camera" />
	<!-- <plugin name="cordova-plugin-file" /> -->
