	<plugin name="cordova-plugin-inappbrowser" />
	<plugin name="cordova-plugin-media" />
	<plugin name="cordova-plugin-statusbar" />
	<plugin name="cordova-plugin-touch-id" />
	<plugin name="cordova-plugin-themeablebrowser" />
	<plugin name="cordova-plugin-customurlscheme"><param name="URL_SCHEME" value="nairabox" /></plugin>
	<plugin name="cordova-plugin-whitelist" />
	<plugin name="cordova-plugin-insomnia" />
	<plugin name="cordova-plugin-keyboard" />
	<plugin name="cordova-plugin-x-socialsharing" />
	<plugin name="cordova-plugin-x-toast" />
	<plugin name="cordova-plugin-geolocation" />
	<plugin name="cordova-plugin-mixpanel" spec="2.2.1" />
	<plugin name="cordova-plugin-android-fingerprint-auth" />
	<plugin name="cordova-plugin-ios-disableshaketoedit" />
	<plugin name="cordova-plugin-remotecmd-playinginfo" />

	<plugin name="phonegap-plugin-barcodescanner" />
	<plugin name="phonegap-plugin-push" spec="1.8.4"><param name="SENDER_ID" value="107189282291" /></plugin>

